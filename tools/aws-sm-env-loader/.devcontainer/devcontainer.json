// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "aws-sm-env-loader",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    // The typescript-node image installs yarn via apt instead of corepack,
    // which screws up dependency pinning.
    "ghcr.io/devcontainers/features/node:1": {
      "installYarnUsingApt": false
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.vscode-github-actions",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "arcanis.vscode-zipfs"
      ]
    }
  },
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "corepack enable && corepack yarn install && yarn dlx @yarnpkg/sdks vscode",
  "remoteEnv": {
    "NODE_ENV": "dev"
  }
}
